{% extends 'layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block contenu %}

<body class="bloca container-fluid">
<header class="header">
    <div class="blocb container-fluid">
        <div class="row">
            <div class="col-md-8">
                <a href="{{ url('index_index') }}"><img class="logo" src="{{ asset('assets/images/adopte-un-mec.png') }}"></a>
            </div>
        </div>
    </div>
</header>
<center>
    <img class="imgConnect img-responsive" src="{{ asset('assets/images/logo2.png') }}">
</center>
{% if error %}
    <!-- BLOC ERROR CONNEXION -->
    <div class="alert alert-danger imgconnect">
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
        {{ error | replace({"Bad credentials." : "Identifiant et/ou mot de passe incorrect."}) }}
    </div>
    <!-- ENDBLOC ERROR CONNEXION -->
{% endif %}

{% if global.request.get('inscription') == 'success' %}
        <!-- BLOC DE SUCCES INSCRIPTION -->
    <div class="alert alert-success">
        <p class="text-center"><i class="fa fa-thumbs-up fa-2x" aria-hidden="true"></i></p>
        <p class="text-center">FÃ©licitation, votre inscription est effective.
            <br>Vous pouvez maintenant vous connecter.</p>
    </div>
        <!-- ENDBLOC DE SUCCES INSCRIPTION -->
{% endif %}

        <!-- BLOC CONNEXION -->
<form action="{{ url('connexion_login_check') }}" method="POST" class="form-horizontal container">

    <div class="form-group">
        <div class="col-xs-6">
            <input class="form-control" required type="email" id="EMAILMEMBRE" value="{{ last_username }}" name="_username" placeholder="Saisissez votre email">
        </div>
        <div class="col-xs-6">
            <input class="form-control"  id="MDPMEMBRE" name="_password" required type="password" placeholder="*******">
        </div>
    </div>

    <input type="submit" class="btn btn-block btn-outline-dark" value="Me connecter !">

</form>
        <!-- BLOC CONNEXION -->
    {% include 'inc/footer.html' %}

{% endblock %}
