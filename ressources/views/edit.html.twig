                    <a href="{{ url('index_index') }}"><img class="logo" src="{{ asset('assets/images/adopte-un-mec.png') }}"></a>
                </div>
                <!-- ENDBLOC LOGO -->
                <!-- BLOC AUTHENTIFACTION -->
                <div class="col-md-4">

